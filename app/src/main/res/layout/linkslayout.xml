        android:textColorLink="#ffffff"
        android:text="http://freecomputerbooks.com/"
        android:id="@+id/textView6"
        android:onClick="gotofreecomputerbooks"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autoLink="web"
        android:textSize="20sp"
        android:layout_marginBottom="10dp"
        android:textColorLink="#ffffff"
        android:text="http://www.freetechbooks.com/"
        android:id="@+id/textView7"
        android:onClick="gotofreetechbooks"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autoLink="web"
        android:textSize="20sp"
        android:layout_marginBottom="10dp"
        android:textColorLink="#ffffff"
        android:text="https://play.google.com/store/books"
        android:id="@+id/textView8"
        android:onClick="gotogoogleplaybooks"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autoLink="web"
        android:textSize="20sp"
        android:layout_marginBottom="10dp"
        android:textColorLink="#ffffff"
        android:text="http://www.ecampus.com/"
        android:id="@+id/textView9"
        android:onClick="gotoeCampus"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autoLink="web"
        android:textSize="20sp"
        android:layout_marginBottom="10dp"
        android:textColorLink="#ffffff"
        android:text="http://ww38.globusz.com/"
        android:id="@+id/textView10"
        android:onClick="gotoglobusz"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autoLink="web"
        android:textSize="20sp"
        android:layout_marginBottom="10dp"
        android:textColorLink="#ffffff"
        android:text="https://www.scribd.com/"
        android:id="@+id/textView11"
        android:onClick="gotoscribd" />

    <Button
        android:layout_width="175dp"
        android:layout_height="50dp"
        android:scaleType="fitCenter"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/button7"
        android:background="@drawable/backbutton3"
        android:onClick="goback"
        />
</LinearLayout>
