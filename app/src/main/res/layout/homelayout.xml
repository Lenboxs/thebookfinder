<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center|top"
    android:orientation="vertical"
    android:background="@drawable/wood2">


    <ImageView
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:scaleType="fitCenter"
        android:background="@drawable/logo2"
        android:id="@+id/imageView" />

    <Button
        android:layout_width="175dp"
        android:layout_height="50dp"
        android:scaleType="fitCenter"
        android:layout_marginBottom="10dp"
        android:id="@+id/button"
        android:onClick="goToBooks"
        android:background="@drawable/booksbutton" />

    <Button
        android:layout_width="175dp"
        android:layout_height="50dp"
        android:scaleType="fitCenter"
       android:layout_marginBottom="10dp"
        android:id="@+id/button2"
        android:onClick="gotTolinks"
        android:background="@drawable/linksbutton" />

    <Button
        android:layout_width="175dp"
        android:layout_height="50dp"
        android:scaleType="fitCenter"
        android:layout_marginBottom="10dp"
        android:id="@+id/button3"
        android:onClick="gotoTaCs"
        android:background="@drawable/tandcsbutton" />

    <Button
        android:layout_width="175dp"
        android:layout_height="50dp"
        android:scaleType="fitCenter"
        android:layout_marginBottom="10dp"
        android:id="@+id/exit"
        android:onClick="exit"
        android:background="@drawable/allroundbutton"/>


</LinearLayout>
